<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_result"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="hmt.hckthn.cm.ui.ResultActivity"
    android:background="#FF000000"
    android:padding="10dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/tv_hmt_result"
        android:textSize="20sp"
        android:textColor="#FFFFFFFF"/>

    <hmt.hckthn.cm.ui.HShapeDrawView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:id="@+id/vuu_hmt_result"
        android:layout_below="@+id/tv_hmt_invite_code_result"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_hmt_invite_code_result"
        android:textSize="20sp"
        android:textColor="#FFFFFFFF"
        android:layout_below="@+id/tv_hmt_result"
        android:layout_centerHorizontal="true"/>
</RelativeLayout>
